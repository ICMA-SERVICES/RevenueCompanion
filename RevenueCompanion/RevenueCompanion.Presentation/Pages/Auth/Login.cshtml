@page
@model RevenueCompanion.Presentation.Pages.Auth.LoginModel
@{
    Layout = "_AuthLayout";
    var color = HttpContextAccessor.HttpContext.Session.GetString("color");

}


<form class="form-horizontal m-t-40" method="post" asp-page="/Auth/Login" name="LoginForm">
    <p>
        <div asp-validation-summary="All" class="text-danger"></div>
    </p>
    <div class="form-group ">
        <div class="col-xs-12">
            <input class="form-control" type="email" required asp-for="Email" placeholder="Email" style="border-color:@color;">
        </div>
    </div>

    <div class="form-group ">

        <div class="col-xs-12">
            <input class="form-control" type="password" required asp-for="Password" placeholder="Password" style="border-color:@color;">
        </div>
    </div>

    <div class="form-group ">
        <div class="col-xs-6">
            <label class="cr-styled">
                <input type="checkbox" checked>
                <i class="fa"></i>
                Remember me
            </label>
        </div>
        <div class="col-xs-6 text-right">
            <a asp-page="/Auth/ForgotPassword" class="cr-styled">Forgot Password?</a>
                
        </div>
    </div>
 

    <div class="form-group text-right">
        <div class="col-md-12">
            <button type="submit" id="btnLogin" class="btn btn-success w-md" style="background-color:@color;">
                Sign In
            </button>
        </div>
    </div>
</form>