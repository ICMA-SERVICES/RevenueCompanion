@page
@model RevenueCompanion.Presentation.Pages.CreditNote.ManualModel
@{
    var menuSetupId = ViewBag.menuSetupId;
}
<input type="hidden" value="@menuSetupId" id="menuSetupId" />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Manual Allocation

            </div>
            <br />

            <div class="row">
                <!-- Basic example -->
                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Search By Assessment Reference Number</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form" id="searchByAssessmentForm">
                                <div class="form-group">
                                    <label for="assessmentRefNumber">Assessment Reference Number</label>
                                    <input type="text" class="form-control" id="assessmentNo" placeholder="Enter Assessment Reference Number">
                                </div>


                                <button type="button" class="btn btn-purple" id="searchAssessmentRefButton">
                                    Search
                                </button>
                            </form>
                        </div><!-- panel-body -->
                    </div>
                    <!-- panel -->
                </div>
                <div class="col-md-12" style="display:none" id="AssessmentInfoDiv">
                    <div class="col-lg-12">
                        <div class="panel-group panel-group-joined" id="accordion-test">

                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion-test" href="#collapseTwo">
                                            System Information About The Assessment Reference Number: <span id="AssessmentRefNumberEntered" class="text-danger"></span>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseTwo" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover table-bordered">

                                                <tbody>
                                                    <tr>
                                                        <th>Payer Name</th>
                                                        <td id="PayerName"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Payer UTIN</th>
                                                        <td id="Utin"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Platform Name</th>
                                                        <td id="PlatformName"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Total Amount</th>
                                                        <td id="TotalAmount"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Amount Paid</th>
                                                        <td id="AmountPaid"></td>
                                                    </tr>
                                                    @*<tr>
                                                        <th>Amount Accessed</th>
                                                        <td id="AmountAccessed"></td>
                                                    </tr>*@
                                                    <tr>
                                                        <th>Revenue Name</th>
                                                        <td id="RevenueName"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>RevenueCode</th>
                                                        <td id="RevenueCode"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Agency Name</th>
                                                        <td id="AgencyName"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Tax Year</th>
                                                        <td id="TaxYear"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Date Created</th>
                                                        <td id="DateCreated"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Assessment Created By</th>
                                                        <td id="AssessmentCreatedBy"></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-9" style="display:none" id="ProposedAmountDiv">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Enter Proposed Amount</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form" id="addProposedAmountForm">
                                <div class="form-group">
                                    <label for="ProposedAmount">Proposed Amount</label>
                                    <input type="text" class="form-control" id="ProposedAmount" placeholder="Enter Proposed Amount">
                                </div>


                                <button type="button" class="btn btn-purple" id="btn_AddCreditNoteRequest">
                                    Submit
                                </button>
                            </form>
                        </div><!-- panel-body -->
                    </div>
                    <!-- panel -->
                </div>
            </div>

        </div>
    </div>
    <div id="cover-spin"></div>
</div>



@section Scripts{
    <script src="~/appscripts/creditnote_manual.js" asp-append-version="true"></script>
}
