@page
@model RevenueCompanion.Presentation.Pages.ChangePasswordModel

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                
            </div>
            <br />

            <div class="row">
                <!-- Basic example -->
                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Change Password</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form" id="changePasswordForm">
                                <div class="form-group">
                                    <label for="oldPassword">Old Password</label>
                                    <input type="password" class="form-control" id="oldPassword" placeholder="Enter Old Password" required>
                                </div>

                                <div class="form-group">
                                    <label for="newPassword">New Password</label>
                                    <input type="password" class="form-control" id="newPassword" min="8" placeholder="Enter New Password" required>
                                </div>

                                <div class="form-group">
                                    <label for="confirmPassword">Confirm Password</label>
                                    <input type="password" class="form-control" id="confirmPassword" min="8" placeholder="Confirm New Password" required>
                                </div>


                                <button type="submit" class="btn btn-purple">
                                    Submit
                                </button>
                            </form>
                        </div><!-- panel-body -->
                    </div>
                    <!-- panel -->
                </div>
            </div>

        </div>
    </div>
    <div id="cover-spin"></div>
</div>



@section Scripts{
    <script src="~/appscripts/change_password.js" asp-append-version="true"></script>
}
